{
  "name": "SecurePZ - One Click Password Generator",
  "version": "1.0.3",
  "description": "Easily create complex and secure passwords and copy it to the clipboard with one click.",
  "manifest_version": 3,
  "author": "Behrouz Sohrabi",
  "permissions": ["storage"],
  "offline_enabled": true,
  "icons": {
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "SecurePZ",
    "default_popup": "generate.html"
  }
}